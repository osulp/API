<div class="todays_hours">
  <% if hours.blank? %>
    <h2><%= I18n.t 'no_hours_available' %></h2>
  <% end %>
  <% hours.each do |key, value| %>
    <% day = Date.parse(key) %>
    <h2><%= day.today? ? 'Today' : day.strftime("%A") %>:
      <%= "#{value["formatted_hours"]}" %></h2>
  <% end %>
</div>
