<div class="this_weeks_hours">
  <p>
    <% if hours.blank? %>
      <strong><%= I18n.t 'no_hours_available' %></strong>
    <% end %>
    <%# todayHours = hours.fetch(Date.today) %>
    <h5> Today: </h4>
    <span> <%=# raw "#{todayHours["formatted_hours"]}".html_safe %> </span> <br>
    <% hours.each do |key, value| %>
      <% day = Date.parse(key) %>
      <% if day.today? %>
        <h4> Today: </h4>
      <% else %>
          <strong><%= day.strftime("%A") %>: </strong>
      <% end %>
      <%= raw "#{value["formatted_hours"]}".html_safe %><br>
      <%= raw "#{key}".html_safe %><br>
    <% end %>
  </p>
</div>