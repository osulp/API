<div class="this_weeks_hours">
  <p>
    <% if hours.blank? %>
      <strong><%= I18n.t 'no_hours_available' %></strong>
    <% elsif hours.length() <= 7 %>
      <% todayDate = DateTime.parse(Date.today.to_s).strftime("%FT%T%:z") %>
      <% todayHours = hours.fetch(todayDate) %>
      <span style="font-size:1.2rem;"> Today: <%= raw "#{todayHours["formatted_hours"]}".html_safe %> </span>
    <% end %>
    <% hours.each do |key, value| %>
      <% day = Date.parse(key) %>
      <strong><%= day.strftime("%A") %>: </strong>
      <%= raw "#{value["formatted_hours"]}".html_safe %>
      <br>
    <% end %>
  </p>
</div>